<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="110px"
        android:layout_marginRight="@dimen/dp_5"
        android:id="@+id/ll_bar"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/bg_removable"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/radio_group"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_normal"
                android:paddingTop="@dimen/dp_5"
                android:layout_height="110px">

                <ImageView
                    android:layout_width="90px"
                    android:layout_centerInParent="true"
                    android:id="@+id/image"
                    android:background="@mipmap/ic_boya"
                    android:layout_height="42px"/>

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:id="@+id/im_drop"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/image"
                    android:background="@mipmap/btn_dropup"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RadioButton
                android:layout_width="match_parent"
                android:background="@null"
                android:text="视频"
                android:layout_weight="1"
                android:textSize="24px"
                android:textColor="@color/white"
                android:id="@+id/radio_video"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@drawable/bg_radio_video"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:id="@+id/radio_audio"
                android:text="音频"
                android:textSize="24px"
                android:textColor="@color/white"
                android:button="@null"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:drawableTop="@drawable/bg_radio_audio"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="贴纸"
                android:id="@+id/radio_pic"
                android:textColor="@color/white"
                android:textSize="24px"
                android:button="@null"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableTop="@drawable/bg_radio_pic"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="提词器"
                android:id="@+id/radio_inscription"
                android:textColor="@color/white"
                android:textSize="24px"
                android:button="@null"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableTop="@drawable/bg_radio_inscription"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="公告"
                android:id="@+id/radio_about"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="24px"
                android:button="@null"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_25"
                android:drawableTop="@drawable/bg_radio_about"
                android:layout_height="wrap_content"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="317px"
        android:id="@+id/ll_right_video"
        android:layout_toRightOf="@id/ll_bar"
        android:layout_marginLeft="37px"
        android:paddingLeft="22px"
        android:paddingRight="22px"
        android:visibility="gone"
        android:background="@drawable/bg_video"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:layout_alignTop="@id/ll_bar"
        android:orientation="vertical"
        android:layout_marginTop="60px"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="44px"
            android:layout_height="wrap_content">
            
            <ImageView
                android:layout_width="113px"
                android:background="@color/teal_200"
                android:layout_height="201px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="22px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="HDMI 1"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:textSize="24px"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/btn_vertical_focused"
                    android:layout_above="@id/im_horization"
                    android:layout_marginBottom="22px"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/im_horization"
                    android:background="@mipmap/btn_vertical_normal"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="44px"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="113px"
                android:background="@color/teal_200"
                android:layout_height="201px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="22px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="HDMI 1"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:textSize="24px"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/btn_vertical_focused"
                    android:layout_above="@id/im_horization"
                    android:layout_marginBottom="22px"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/im_horization"
                    android:background="@mipmap/btn_vertical_normal"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="113px"
                android:background="@color/teal_200"
                android:layout_height="201px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="22px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="HDMI 1"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:textSize="24px"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/btn_vertical_focused"
                    android:layout_above="@id/im_horization"
                    android:layout_marginBottom="22px"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/im_horization"
                    android:background="@mipmap/btn_vertical_normal"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="318px"
        android:background="@drawable/bg_video"
        android:id="@+id/rv_audio"
        android:layout_toRightOf="@id/ll_bar"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
       android:visibility="gone"
        android:layout_marginTop="70px"
        android:layout_alignTop="@id/ll_bar"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="425px"
        android:background="@drawable/bg_video"
        android:id="@+id/rv_pic"
        android:layout_toRightOf="@id/ll_bar"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:visibility="gone"
        android:layout_marginTop="270px"
        android:layout_alignTop="@id/ll_bar"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="795px"/>

    <!--图库-->
    <RelativeLayout
        android:id="@+id/rl_imgku"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pic_bg_grey"
        android:clickable="true"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/btn_back_normal"
            android:textSize="30px"
            android:clickable="true"
            android:text="返回"
            android:textColor="@color/white"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:clickable="true"
            android:text="图库"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="30px"/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:clickable="true"
            android:text="确定"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="30px"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_img_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pic_bg_grey"
            android:layout_marginTop="90px"
            android:visibility="gone"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pic_bg_grey"
            android:layout_marginTop="90px"
            android:visibility="gone"
            />



    </RelativeLayout>

    <!--贴纸调整-->
    <RelativeLayout
        android:id="@+id/rl_pic_adjust"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pic_bg_grey"
        android:clickable="true"
        android:clipChildren="false"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_pic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/btn_back_normal"
            android:textSize="30px"
            android:clickable="true"
            android:text="返回"
            android:textColor="@color/white"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:clickable="true"
            android:text="贴纸调整(可拖动)"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="30px"/>

        <RelativeLayout
            android:id="@+id/rl_pic_bg"
            android:layout_width="761px"
            android:layout_height="1353px"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:layout_marginTop="97px">

        <ImageView
            android:layout_width="270px"
            android:scaleType="centerCrop"
            android:id="@+id/iv_pic_image"
            android:layout_centerInParent="true"
            android:layout_height="270px"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/black"
            android:layout_marginLeft="100px"
            android:layout_marginTop="77px"
            android:layout_below="@+id/rl_pic_bg"
            android:text="快速调整"/>

        <Button
            android:id="@+id/btn_pic_resize"
            android:layout_width="250px"
            android:layout_height="100px"
            android:gravity="center"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="原始大小"
            android:layout_marginLeft="270px"
            android:layout_marginTop="45px"
            android:layout_below="@+id/rl_pic_bg"
            android:background="@drawable/bg_pic_adjust_blue"
            />


        <Button
            android:id="@+id/btn_pic_roation"
            android:layout_width="250px"
            android:layout_height="100px"
            android:gravity="center"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="旋转"
            android:layout_marginLeft="700px"
            android:layout_marginTop="45px"
            android:layout_below="@+id/rl_pic_bg"
            android:background="@drawable/bg_pic_adjust_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/black"
            android:layout_marginLeft="100px"
            android:layout_marginTop="200px"
            android:layout_below="@+id/rl_pic_bg"
            android:text="贴纸大小"/>

        <SeekBar
            android:id="@+id/seekbar_pic"
            android:layout_width="650px"
            android:layout_height="30px"
            android:layout_below="@+id/rl_pic_bg"
            android:layout_marginLeft="270px"
            android:layout_marginTop="205px"
            android:paddingStart="0px"
            android:paddingEnd="0px"
            android:splitTrack="false"
            android:progressDrawable="@drawable/progressbar_color"
            android:thumb="@drawable/shape_circle_blue"
            android:progress="50"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20px"
            android:layout_below="@id/seekbar_pic"
            android:layout_alignLeft="@id/seekbar_pic"
            android:layout_marginTop="5px"
            android:text="0%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20px"
            android:layout_below="@id/seekbar_pic"
            android:layout_marginLeft="305px"
            android:layout_alignLeft="@+id/seekbar_pic"
            android:layout_marginTop="5px"
            android:text="100%"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20px"
            android:layout_below="@id/seekbar_pic"
            android:layout_alignRight="@id/seekbar_pic"
            android:layout_marginTop="5px"
            android:text="200%"/>

        <Button
            android:id="@+id/btn_pic_reset"
            android:layout_width="350px"
            android:layout_height="100px"
            android:gravity="center"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="重置"
            android:layout_marginLeft="100px"
            android:layout_marginTop="300px"
            android:layout_below="@+id/rl_pic_bg"
            android:background="@drawable/bg_pic_adjust_black"
            />


        <Button
            android:id="@+id/btn_pic_submit"
            android:layout_width="350px"
            android:layout_height="100px"
            android:gravity="center"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="确定"
            android:layout_marginLeft="600px"
            android:layout_marginTop="300px"
            android:layout_below="@+id/rl_pic_bg"
            android:background="@drawable/bg_pic_adjust_blue"
            />

    </RelativeLayout>



    <!--提词器-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="425px"
        android:layout_height="795px"
        android:background="@drawable/bg_video"
        android:id="@+id/rv_inscription"
        android:layout_toRightOf="@id/ll_bar"
        android:paddingBottom="20px"
        android:paddingTop="50px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:visibility="gone"
        android:layout_marginTop="270px"
        android:clickable="true"
        android:scrollbars="vertical"
        android:layout_alignTop="@id/ll_bar"
        android:layout_marginLeft="@dimen/dp_15"
       />



    <!--公告-->
    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="490px"
        android:layout_height="590px"
        android:layout_toRightOf="@id/ll_bar"
        android:padding="20px"
        android:layout_marginTop="270px"
        android:layout_alignTop="@id/ll_bar"
        android:background="@drawable/bg_video"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <!--加载框-->
    <RelativeLayout
        android:id="@+id/rl_loading_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:tooltipText="加载中..."

            />
    </RelativeLayout>

</RelativeLayout>